<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
</head>
<body>

<!-- Header -->
<%- include('./partials/header'); %>

<div id="main">

    <div class="container">

        <section class="sidebar">
            <div class="sidebar-top">
                <h2>Profile</h2>
            </div>

            <ul>
                <li><a href="#">Profile Info</a></li>
                <li><a href="#">Current Bets</a></li>
                <li><a href="#">Past Bets</a></li>
                <li><a href="#">Friends</a></li>
            </ul>
        </section>

        <section class="profile">
            <div class="profile-top">
                <div class="pf-picture"><img src="img/stick-figure-40652_1280(1).png"></div>
                <h3><%= user.username %></h3>
            </div>

            <div>
                <ul>
                    <li><span>Email:</span><p><%= user.email %></p></li>
                    <li><span>Address:</span><p><%= user.city %> <%= user.zip %>, <%= user.street %></p></li>
                    <li><span>Birthday:</span><p><%= (new Date(user.birthdate)).toLocaleDateString("be-BE") %></p></li>
                    <li><span>Card number:</span>
                        <p>
                            <%= user.card_number.substr(0, 4) + ' ' + user.card_number.substr(4, 4) + ' '
                            + user.card_number.substr(8, 4) + ' ' + user.card_number.substr(12) %>
                        </p>
                    </li>
                </ul>

                <button class="grey-button edit-button">Edit</button>
            </div>
        </section>

        <section class="credit">
            <div>
                <p>$<%= user.credit %></p>
                <button class="yellow-button">Add Credit</button>
                <button class="yellow-button">Withdraw</button>
            </div>
        </section>
    </div>
</div>
<footer>

</footer>
</body>
</html>