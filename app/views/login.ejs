<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
    <script src="/js/login.js" defer></script>
</head>
<body>


<!-- Header -->
<%- include('./partials/header'); %>

<main>
    <div class="login container">
        <h1>Login</h1>

        <form method="POST" id="login-info" novalidate>

            <p id="success-message"></p>

            <div class="form-group">
                <label for="username" class="username">Username</label>
                <input type="text" placeholder="Username" id="username" name="username" autocomplete="username" value="<%= locals.user ? user.userName : '' %>" required="required">
                <div class="description" id="username-valid"></div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" placeholder="Password" id="password" name="password" required>
                <div class="description" id="password-valid"></div>
            </div>
            <button type="submit">Login</button>

            <a href="/"><p id="move-message"></p></a>

        </form>
        <a href="/register">Register</a>

    </div>
</div>


</main>

<!-- Footer -->
<%- include('./partials/footer'); %>

</body>
</html>